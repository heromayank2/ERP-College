<div class="container">
    <div class="row mt-5 p-2">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card card-body" style="background:#5edfff">
                <h1 class="text-center mb-3" style="color:#3e64ff;font-family: 'Oswald', sans-serif;">Welcome !<br>Students Login Here</h1>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="sid">Student ID</label>
                        <input type="text" id="sid" name="sid" class="form-control" placeholder="Enter College ID" style="background:#ffffff88" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" style="background:#ffffff88" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>